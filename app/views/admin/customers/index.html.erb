<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">

      <h2>会員一覧</h2>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-active">会員ID</th>
            <th class="table-active">名前</th>
            <th class="table-active">メールアドレス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= customer.name %></td>
              <td><%= customer.email %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>

<!--ページネーション-->
<div class="d-sm-flex justify-content-sm-center">
  <%= paginate @customers %>
</div>




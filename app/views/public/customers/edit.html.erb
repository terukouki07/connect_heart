<%= render "public/shared/error_messages", resource: @customer %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3 card">
      <div class="card-body">
        <h2 class="my-sm-3 text-secondary">会員編集</h2>
        <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>

          <div class="row form-group">
            <div class="col-sm-3 offset-sm-1">
              <%= f.label :image, "画像" %>
            </div>
            <div class="col-sm-7">
              <%= f.file_field :profile_image, accept: "image/*" %>
            </div>
          </div>

          <div class="row form-group my-sm-4">
            <div class="col-sm-3 offset-sm-1">
              <%= f.label :name, "ユーザー名", class: "col-form-label" %>
            </div>
            <div class="col-sm-7">
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>

          <div class="row form-group mb-sm-4">
            <div class="col-sm-3 offset-sm-1">
              <%= f.label :introduction, "自己紹介", class: "col-form-label"%>
            </div>
            <div class="col-sm-7">
              <%= f.text_area :introduction, class: "form-control" %>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-3 offset-sm-5 pl-sm-4">
              <%= f.submit "更新", class: "btn btn-info" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="d-flex justify-content-center align-items-center">
  <div>
    <h2>編集ページ</h2>
    <%= form_with model: @customer, url: customer_path(@customer.id), method: :patch do |f| %>
      <table>
        <tr>
          <th><%= f.label :画像 %></th>
          <td><%= f.file_field :profile_image %></td>
        </tr>
        <tr>
          <th><%= f.label :名前 %></th>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <th><%= f.label :紹介文 %></th>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td><%= f.submit "更新を保存" %></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>
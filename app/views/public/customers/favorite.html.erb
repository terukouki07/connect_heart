<div class="container">
  <div class="row">
    <div class="col-md-7 offset-3">
      <h2>いいね一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>画像</th>
            <th>名前</th>
            <th>性格</th>
            <th>本文</th>
          </tr>
        </thead>
        <tbody>
          <% @favorite_posts.each do |post|%>
          <tr>
            <td>
              <%= link_to post_path(post.id) do %>
                <%= image_tag post.get_image(100,100) %><br>
                <%= post.customer.name %>
              <% end %>
            </td>
            <td><%= post.name %></td>
            <td><%= post.character %></td>
            <td><%= post.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <h4>おすすめ</h4>
      <div class="row">
        <% @customers.each do |customer| %>
        <div class="col-sm-3 text-sm-center">
          <%= image_tag customer.get_profile_image(100,100), class: "rounded-circle" %>
        </div>
        <div class="col-sm-2 font-weight-bold px-sm-0 d-sm-flex align-items-center">
          <%= customer.name %>
        </div>
        <div class="col-sm-4 offset-sm-3 d-sm-flex align-items-center">
          <%= link_to "詳細へ", customer_path(customer.id), class: "btn btn-info" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!--ページネーション-->
<div class="d-sm-flex justify-content-sm-center">
  <%= paginate @customers %>
</div>
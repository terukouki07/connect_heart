<div class="d-flex justify-content-center align-items-center">
    <div>
        <h2>投稿編集</h2>
        <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
            <table>
                <tr>
                    <th><%= f.label :image, "画像" %></th>
                    <td><%= f.file_field :image %></td>
                </tr>
                <tr>
                    <th><%= f.label :name, "名前" %></th>
                    <td><%= f.text_field :name %></td>
                </tr>
                <tr>
                    <th><%= f.label :sex, "性別" %></th>
                    <td>
                        <%= f.radio_button :sex, :オス %>
                        <%= f.label :sex_male, "オス" %>
                        <%= f.radio_button :sex, :メス %>
                        <%= f.label :sex_female, "メス" %>
                    </td>
                </tr>
                 <tr>
                    <th><%= f.label :age, "年齢" %></th>
                    <td><%= f.text_field :age %> 才</td>
                </tr>
                <tr>
                    <th><%= f.label :genre, "種類" %></th>
                    <td><%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %></td>
                </tr>
                <tr>
                    <th><%= f.label :status, "状況ステータス" %></th>
                    <td>
                        <%= f.radio_button :status, :recruiting %>
                        <%= f.label :status_recruiting, "里親募集中" %>

                        <%= f.radio_button :status, :trial %>
                        <%= f.label :status_trial, "トライアル中" %>

                        <%= f.radio_button :status, :decision %>
                        <%= f.label :status_decision, "里親様決定しました" %>

                        <%= f.radio_button :status, :lost_child %>
                        <%= f.label :status_lost_child, "迷子の動物を探しています" %>
                    </td>
                </tr>
                <tr>
                    <th> <%= f.label :character, "性格" %></th>
                    <td><%= f.text_area :character %></td>
                </tr>
                <tr>
                    <th><%= f.label :body, "本文" %></th>
                    <td><%= f.text_area :body %></td>
                </tr>
                <tr>
                    <td><%= f.submit "更新を保存" %></td>
                </tr>
            </table>
        <% end %>
    </div>
</div>
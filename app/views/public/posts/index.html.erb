<div class="container">
    <div class="row">
        <div class="col-md-3">
            <%= image_tag "https://dummyimage.com/150x150/000/fff" %>
            <ul>
                <li><%= link_to "マイページ", customer_path(current_customer.id) %></li>
                <li><%= link_to "お気に入り", favorite_customer_path(current_customer.id) %></li>
            </ul>
        </div>

        <div class="col-md-6">
            <div class="row">
                <%= image_tag "https://dummyimage.com/570x400/000/fff" %>
            </div>
            <h4 class="my-md-3">新着投稿</h4>
            <div class="row">
                <% @posts.each do |post| %>
                    <div class="col-md-4">
                        <table class="table table-bordered">
                            <tr>
                                <td class="text-center"><%= image_tag post.get_image(100,100) %></td>
                            </tr>
                            <tr>
                                <td><%= post.status_i18n %></td>
                            </tr>
                            <tr>
                                <td><%= post.name %></td>
                            </tr>
                            <tr>
                                <td><%= link_to "詳しく見る", post_path(post.id) %></td>
                            </tr>
                        </table>
                    </div>
                <% end %>
            </div>
        </div>

        <div class="col-md-3">
            <h4 class="text-center">Category</h4>
        </div>
    </div>
</div>
<!--ページネーション-->
<div class="d-md-flex justify-content-md-center">
    <%= paginate @posts %>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h2>新規登録</h2>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>
            <div class="field form-group row my-4">
              <%= f.label :name, "ユーザー名", class: "col-form-label col-sm-4" %>
              <div class="col-sm-8">
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
              </div>
            </div>

            <div class="field form-group row my-4">
              <%= f.label :email, "メールアドレス", class: "col-form-label col-sm-4" %>
              <div class="col-sm-8">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>

            <div class="field form-group row my-4">
              <%= f.label :password, "パスワード", class: "col-form-label col-sm-4" %>
              <div class="col-sm-8">
                <%= f.password_field :password, autocomplete: "new-passwod", class: "form-control" %>
              </div>
            </div>

            <div class="field form-group row my-4">
              <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-form-label col-sm-4" %>
              <div class="col-sm-8">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>
            </div>

            <div class="field form-group row my-4">
              <%= f.label :introduction, "ユーザー紹介", class: "col-form-label col-sm-4" %>
              <div class="col-sm-8">
                <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction", class: "form-control" %>
              </div>
            </div>

            <div class="field form-group row mt-4">
              <div class="actions offset-sm-4 col-sm-8">
                <%= f.submit "新規登録", class: "btn btn-success" %>
              </div>
            </div>
          <% end %>

          <p class="mt-3">
            <strong>既に登録済みの方</strong><br>
            <%= render "public/shared/links" %>からログインしてください。
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
<% if customer_signed_in? %>
  <%= form_with url: search_path, method: :get, class: "form-inline my-sm-2" do |f| %>
    <%= f.text_field :word, class: "form-control mr-sm-2", placeholder: "Search" %>
    <%= f.select :range, options_for_select([['Customer'], ['Post']]) %>
    <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
    <%= f.submit "検索", class: "btn btn-outline-info my-2 my-sm-0" %>
  <% end %>
<% end %>
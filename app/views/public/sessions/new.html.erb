<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <h2 class="text-secondary">Connect Heart</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field form-group row my-4">
              <%= f.label :email, "メールアドレス", class: "col-form-label col-sm-4" %>
              <div class="col-sm-8">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
            </div>

            <div class="field form-group row my-4">
              <%= f.label :password, "パスワード", class: "col-form-label col-sm-4" %>
              <div class="col-sm-8">
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>
            </div>

            <div class="field form-group row mt-4">
              <div class="actions offset-sm-4 col-sm-8">
                <%= f.submit "ログイン", class: "btn btn-success" %>
              </div>
            </div>
          <% end %>

          <p class="mt-3">
            <strong>登録がお済みでない方</strong><br>
            <%= render "public/shared/links" %>から新規登録をしてください。
          </p>
        </div>
      </div>
    </div>
  </div>
</div>